<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="strokeColor">@color/design_default_color_primary</item>
        <item name="backgroundTint">@color/design_default_color_secondary_variant</item>
        <item name="strokeWidth">5dp</item>
    </style>

    <style name="MainButton.PrimaryButton">
        <item name="strokeColor">@color/black</item>
        <item name="backgroundTint">@color/design_default_color_secondary</item>
        <item name="strokeWidth">3dp</item>
        <item name="elevation">10dp</item>
        <item name="shapeAppearance">@style/ButtonShape</item>
    </style>

    <style name="ButtonShape" parent="">
        <item name="cornerFamily">?attr/shapeCornerFamily</item>
        <item name="cornerSize">8dp</item>
    </style>


</resources>
